{
  "manifest_version": 2,
  "name": "Website Usage",
  "short_name": "Web Usage",
  "description": "Find out how much time you spend on different websites",
  "version": "0.1.0",
  "author": "Martin Frodl",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
